#include <windows.h>

// Dialog- und Control-IDs definieren
#define IDD_PASSWORD_DIALOG 102
#define IDC_PASSWORD_INPUT 101

IDD_PASSWORD_DIALOG DIALOGEX 0, 0, 180, 45
STYLE DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Passwort eingeben"
FONT 8, "MS Shell Dlg"
BEGIN
    EDITTEXT        IDC_PASSWORD_INPUT, 5, 10, 170, 15, ES_PASSWORD | WS_BORDER | WS_TABSTOP
    DEFPUSHBUTTON   "OK", IDOK, 30, 30, 50, 14, WS_TABSTOP
    PUSHBUTTON      "Abbrechen", IDCANCEL, 90, 30, 50, 14, WS_TABSTOP
END

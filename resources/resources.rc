#include <windows.h>

// Dialog- und Control-IDs definieren
#define IDD_PASSWORD_DIALOG 102
#define IDC_PASSWORD_INPUT 101
#define IDC_PROGRESS_BAR 103
#define IDC_PROGRESS_LABEL 104

// Hauptsymbol für die Anwendung
1 ICON "resources/icon.ico"

// Passwort-Dialog
IDD_PASSWORD_DIALOG DIALOGEX 0, 0, 220, 70
STYLE DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Passwort eingeben"
FONT 8, "MS Shell Dlg"
BEGIN
    LTEXT           "Bitte geben Sie das Passwort ein:", IDC_STATIC, 10, 10, 200, 10
    EDITTEXT        IDC_PASSWORD_INPUT, 10, 25, 200, 15, ES_PASSWORD | WS_BORDER | WS_TABSTOP
    DEFPUSHBUTTON   "OK", IDOK, 50, 50, 50, 14, WS_TABSTOP
    PUSHBUTTON      "Abbrechen", IDCANCEL, 120, 50, 50, 14, WS_TABSTOP
END

// Versionsinformationen
VS_VERSION_INFO VERSIONINFO
FILEVERSION     1,0,0,0
PRODUCTVERSION  1,0,0,0
FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
FILEFLAGS       0
FILEOS          VOS_NT_WINDOWS32
FILETYPE        VFT_APP
FILESUBTYPE     VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040704B0" // Deutsch
        BEGIN
            VALUE "CompanyName", "Secure Solutions"
            VALUE "FileDescription", "Dateiverschlüsselungs-Tool"
            VALUE "FileVersion", "1.0.0.0"
            VALUE "InternalName", "encrypt"
            VALUE "LegalCopyright", "© 2025 Secure Solutions"
            VALUE "OriginalFilename", "encrypt.exe"
            VALUE "ProductName", "EncryptionTool"
            VALUE "ProductVersion", "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0407, 1200 // Deutsch
    END
END